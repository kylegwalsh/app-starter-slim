{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["vitest/globals"],
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"]
}
