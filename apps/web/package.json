{
  "name": "@repo/web",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "sst shell -- next dev",
    "start": "sst shell -- next start",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true NEXT_PUBLIC_STAGE=dev sst shell -- next build",
    "test": "sst shell -- vitest run",
    "test:ci": "sst shell --stage ci -- vitest run",
    "test:ui": "sst shell -- vitest --ui",
    "test:e2e": "sst shell -- playwright test",
    "test:e2e:ci": "sst shell --stage ci -- playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "pretty": "prettier --write . --ignore-path ../../.prettierignore",
    "format": "pnpm lint:fix & pnpm pretty",
    "types:check": "pnpm --filter @repo/backend types:generate && tsc --noEmit",
    "postinstall": "npx playwright install chromium --with-deps"
  },
  "dependencies": {
    "@daveyplate/better-auth-ui": "^2.0.16",
    "@repo/config": "workspace:*",
    "@repo/constants": "workspace:*",
    "@repo/design": "workspace:*",
    "@repo/utils": "workspace:*",
    "@tanstack/react-query": "^5.77.2",
    "@trpc/client": "^11.2.0",
    "@trpc/react-query": "^11.2.0",
    "better-auth": "^1.2.12",
    "jotai": "^2.12.4",
    "lucide-react": "^0.475.0",
    "next": "15.3.1",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.3",
    "superjson": "^2.2.2"
  },
  "devDependencies": {
    "@repo/backend": "workspace:*",
    "@repo/eslint": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@trpc/server": "11.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.3"
  }
}
